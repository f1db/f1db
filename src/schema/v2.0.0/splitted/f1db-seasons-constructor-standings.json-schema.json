{
  "$id": "https://www.f1db.net/schema/v2.0.0/splitted/f1db-seasons-constructor-standings-json-schema.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "F1DB",
  "description": "F1DB Seasons Constructor Standings JSON Schema",
  "type": "array",
  "items": {
    "$ref": "#/definitions/SeasonConstructorStanding"
  },
  "additionalProperties": false,
  "definitions": {
    "SeasonConstructorStanding": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "year": {
          "type": "integer",
          "description": "The year."
        },
        "positionDisplayOrder": {
          "type": "integer",
          "minimum": 1,
          "description": "The position display order."
        },
        "positionNumber": {
          "type": ["integer", "null"],
          "minimum": 1,
          "description": "The position number."
        },
        "positionText": {
          "type": "string",
          "pattern": "^[0-9]+|DSQ|EX$",
          "description": "The position text."
        },
        "constructorId": {
          "type": "string",
          "description": "The constructor."
        },
        "engineManufacturerId": {
          "type": "string",
          "description": "The engine manufacturer."
        },
        "points": {
          "type": "number",
          "minimum": 0,
          "multipleOf": 0.01,
          "description": "The points."
        }
      },
      "required": [
        "year",
        "positionDisplayOrder",
        "positionNumber",
        "positionText",
        "constructorId",
        "engineManufacturerId",
        "points"
      ]
    }
  }
}
